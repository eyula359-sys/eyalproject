<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.AddTicket">

    <TextView
        android:id="@+id/textticket"
        android:layout_width="340dp"
        android:layout_height="81dp"
        android:fontFamily="@font/secular_one_regular"
        android:text="הוספת כרטיס"
        android:textSize="60dp"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="58dp" />

    <EditText
        android:id="@+id/text_Price"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:fontFamily="@font/secular_one_regular"
        android:hint="Price"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="242dp" />

    <EditText
        android:id="@+id/text_Section"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:fontFamily="@font/secular_one_regular"
        android:hint="Section"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="309dp" />

    <EditText
        android:id="@+id/text_Row"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:fontFamily="@font/secular_one_regular"
        android:hint="Row"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="379dp" />

    <EditText
        android:id="@+id/text_Seat"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:fontFamily="@font/secular_one_regular"
        android:hint="Seat"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="444dp" />

    <EditText
        android:id="@+id/text_Currency"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:fontFamily="@font/secular_one_regular"
        android:hint="Currency"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="509dp" />

    <EditText
        android:id="@+id/text_IsAvailable"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:fontFamily="@font/secular_one_regular"
        android:hint="Is available?"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="574dp" />

    <Button
        android:id="@+id/btnAddTick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/secular_one_regular"
        android:text="הוסף"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="646dp" />

    <Spinner
        android:id="@+id/spinnergames"
        android:layout_width="350dp"
        android:layout_height="65dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="157dp" />
</androidx.constraintlayout.widget.ConstraintLayout>